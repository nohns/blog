---
import Layout from "../../layouts/Layout.astro";
import { getCollection } from "astro:content";

const posts = await getCollection("blog");
const tags = [...new Set(posts.flatMap((post) => post.data.tags || []))];
const tagCounts = tags.reduce(
  (acc, tag) => {
    acc[tag] = posts.filter((post) => post.data.tags?.includes(tag)).length;
    return acc;
  },
  {} as Record<string, number>
);
---

<Layout title="Tags | Your Blog Name" description="Browse blog posts by tags">
  <div class="max-w-4xl mx-auto">
    <h1 class="text-4xl font-bold mb-8 text-terminal-green">Tags</h1>
    <div class="flex flex-wrap gap-4">
      {
        tags.map((tag) => (
          <a
            href={`/tags/${tag}`}
            class="px-4 py-2 border border-terminal-green/20 rounded hover:border-terminal-green/40 transition-colors"
          >
            <span class="text-terminal-amber">#{tag}</span>
            <span class="text-terminal-text/60 ml-2">({tagCounts[tag]})</span>
          </a>
        ))
      }
    </div>
  </div>
</Layout>

